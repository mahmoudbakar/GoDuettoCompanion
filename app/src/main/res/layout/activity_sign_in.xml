<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerationsys.SignInActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mainLay"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:background="@color/blackTrance"
                    android:layout_marginEnd="2dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>
                <EditText
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:id="@+id/edPhone"
                    android:textColorHint="@color/white"
                    android:hint="Username"
                    android:text="201015434300"
                    android:paddingStart="5dp"
                    android:background="@color/whiteTrance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:background="@color/blackTrance"
                    android:layout_marginEnd="2dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>
                <EditText
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:id="@+id/edPassword"
                    android:textColorHint="@color/white"
                    android:paddingStart="5dp"
                    android:hint="Password"
                    android:text="qwerty12"
                    android:background="@color/whiteTrance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtButtonSignIn"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:gravity="center"
                android:text="@string/sign_in"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryTrans"/>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txtButtonSignUp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/new_user"
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/txtButtonForgetPassword"
                        android:layout_marginStart="25dp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/forget_password"
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <View
                        android:background="@color/colorAccentTrans"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />
                    <View
                        android:background="@color/colorPrimaryTrans"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>